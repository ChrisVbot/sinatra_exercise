<% @messages.each do |message| %>
  <div class="message"
    <h3><small>(by: <%= message.author %>)</small></h3>
    <p>
     <a href="/messages/<%= message.id %>"> <%= message.content %></a>
    </p>
    <p>
      <a href="<%= message.URL %>"><%= message.URL %></a>
    </p>
    <p>
      <small>Message created at: <%= message.created_at %></small>
    </p>
  </div>
<% end %>

<a href="/messages/new">Post a message... It's FREE (for now)!</a>